{
	"name": "@mailer/frontend",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"cf-typegen": "wrangler types --env preview && move worker-configuration.d.ts src/",
		"deploy:dev": "pnpm build && wrangler pages deploy --branch dev --commit-dirty=true",
		"deploy:prod": "pnpm build && wrangler pages deploy --branch main --commit-dirty=true",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"test": "pnpm test:unit && pnpm test:integration"
	},
	"devDependencies": {
		"@playwright/test": "1.46.1",
		"@sveltejs/adapter-cloudflare": "4.7.2",
		"@sveltejs/kit": "2.5.24",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.6",
		"sass-embedded": "1.77.8",
		"svelte": "5.0.0-next.239",
		"svelte-check": "3.8.6",
		"tslib": "2.7.0",
		"typescript": "5.5.4",
		"unocss": "0.62.3",
		"vite": "5.4.2",
		"vitest": "2.0.5",
		"wrangler": "3.72.2"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@mailer/db": "workspace:",
		"@mailer/lib": "workspace:",
		"@unocss/reset": "0.62.3",
		"drizzle-orm": "0.33.0",
		"lucia": "3.2.0",
		"oslo": "1.2.1",
		"zod": "3.23.8"
	}
}
