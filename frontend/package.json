{
	"name": "@mailer/frontend",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"cf-typegen": "wrangler types --env preview && move worker-configuration.d.ts src/",
		"deploy:dev": "pnpm run build && wrangler deploy .svelte-kit/cloudflare/_worker.js --env preveiw",
		"deploy:prod": "pnpm run build && wrangler deploy --env production"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "4.7.0",
		"@sveltejs/kit": "2.5.20",
		"@sveltejs/vite-plugin-svelte": "3.1.1",
		"svelte": "5.0.0-next.210",
		"svelte-check": "3.8.5",
		"tslib": "2.6.3",
		"typescript": "5.5.4",
		"unocss": "0.61.9",
		"vite": "5.3.5",
		"wrangler": "3.68.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@mailer/db": "workspace:",
		"@mailer/lib": "workspace:",
		"@unocss/reset": "0.61.9",
		"@yannicel/typed-api": "0.2.8",
		"drizzle-orm": "0.32.2",
		"lucia": "3.2.0",
		"oslo": "1.2.1",
		"zod": "3.23.8"
	}
}
