{
	"name": "@mailer/frontend",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"cf-typegen": "wrangler types --env preview && move worker-configuration.d.ts src/",
		"deploy:dev": "pnpm build && wrangler deploy --env dev",
		"deploy:prod": "pnpm build && wrangler deploy --env prod",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"test": "pnpm test:unit && pnpm test:integration",
		"prepare": "svelte-kit sync"
	},
	"devDependencies": {
		"@playwright/test": "1.52.0",
		"@sveltejs/adapter-cloudflare": "7.0.2",
		"@sveltejs/kit": "2.17.1",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"sass-embedded": "1.83.4",
		"svelte": "5.19.10",
		"svelte-check": "4.1.4",
		"tslib": "2.8.1",
		"typescript": "5.7.3",
		"unocss": "66.1.0",
		"vite": "6.3.5",
		"vitest": "3.1.3",
		"wrangler": "4.14.2"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@mailer/db": "workspace:",
		"@mailer/lib": "workspace:",
		"@unocss/reset": "66.1.0",
		"drizzle-orm": "0.39.3",
		"lucia": "3.2.2",
		"oslo": "1.2.1",
		"zod": "3.24.2"
	}
}
