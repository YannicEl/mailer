{
	"name": "@mailer/base",
	"type": "module",
	"packageManager": "pnpm@10.7.1",
	"engines": {
		"node": "23",
		"pnpm": "10"
	},
	"scripts": {
		"format:check": "prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"prettier-plugin-organize-imports": "4.0.0",
		"prettier-plugin-svelte": "3.2.6",
		"prettier-plugin-tailwindcss": "0.6.6"
	},
  "pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"canvas",
			"esbuild",
			"sharp",
			"workerd"
		],
    "peerDependencyRules": {
			"allowedVersions": {
				"vitest": "3",
				"@vitest/runner": "3",
				"@vitest/snapshot": "3"
			}
		}
	}
}
